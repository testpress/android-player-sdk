<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/thumbnail_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/tp_light_gray"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thumbnail_image"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@id/thumbnail_image"
            android:text="Video Title"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/video_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thumbnail_image"
            android:layout_marginStart="16dp"
            android:layout_alignBottom="@id/thumbnail_image"
            android:text="VideoId"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/download_status"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"/>

    </RelativeLayout>

</LinearLayout>